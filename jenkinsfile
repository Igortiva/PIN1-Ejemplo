pipeline {
    agent any
    parameters {
        string(name: 'REGISTRY_URL', defaultValue: 'https://index.docker.io/v1/')
        string(name: 'REPOSITORY_NAME', defaultValue: 'andreyrojasd/mundos-e')
        string(name: 'TAG_NAME', defaultValue: 'tagname')
    }

    stages {
        stage('Build and tag Docker Image') {
            steps {
                script {
                    // Define the Docker plugin variable
                    docker = docker.withRegistry(REGISTRY_URL)

                    // Build the Docker image
                    docker.build('app1:latest', '.')

                    // Tag the Docker image
                    docker.image('app1:latest').tag(REPOSITORY_NAME + ':' + TAG_NAME)
                }
            }
        }
        stage('Push Docker image to Docker Hub') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.image(REPOSITORY_NAME + ':' + TAG_NAME).push()
                }
            }
        }
    }
}
