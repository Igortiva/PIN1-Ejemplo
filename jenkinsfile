pipeline {
  agent {
    docker {
      image 'jenkins/agent:latest'
    }
  }

  stages {
    stage('Build') {
      steps {
        sh 'docker build -t andreyrojasd/mundos-e:latest .'
      }
    }

    stage('Tag') {
      steps {
        sh 'docker tag andreyrojasd/mundos-e:latest andreyrojasd/mundos-e:${BUILD_TAG}'
      }
    }

    stage('Push') {
      steps {
        sh 'docker push andreyrojasd/mundos-e:${BUILD_TAG}'
      }
    }

    stage('Scan') {
      steps {
        sh 'docker scan andreyrojasd/mundos-e:${BUILD_TAG}'
      }
    }
  }

  environment {
    BUILD_TAG = sh(returnStdout: true, script: 'echo ${GIT_COMMIT}-${BUILD_NUMBER}')
  }
}
