pipeline {
    agent any
    stages {
        stage('Build and tag Docker Image') {
            steps {
                script {
                    // Realiza la construcci√≥n y etiquetado de la imagen
                    docker.build('app1:latest', '.')
                }
            }
        }
        stage('Push Docker image to Docker Hub') {
            steps {
                script {
                    // Empuja la imagen a Docker Hub con el nombre del repositorio
                    docker.withRegistry('https://index.docker.io/v1/') {
                        docker.image('app1:latest').push('andreyrojasd/mundos-e:tagname')
                    }
                }
            }
        }
        stage('Scanning image') {
            steps {
                script {
                    // Realiza el escaneo de la imagen
                    trivy.image('app1:latest')
                }
            }
        }
    }
}
